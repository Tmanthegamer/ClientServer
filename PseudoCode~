struct Client {
	pid_t id;
	short cur_priority;
	short def_priority;
	void ClientTask();
} Client;

UpdatePriorities(struct Client[] Clients)
	short cur_max = 0;
	foreach (Client in Clients)
		if(Client->cur_priority == 5)
			cur_max == 5;			
			break;
		else if(cur_max < Client->cur_priority)
			cur_max = Client->cur_priority
	foreach (Client in Clients)
		if(cur_priority == cur_max)
			Client->ClientTask()			
			reset cur_priority to def_priority
		else
			cur_priority = cur_priority + 1
	//end of foreach
//End of UpdatePriorities
